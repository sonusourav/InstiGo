<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/divider_color">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_fl1"

        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/profile_cover_pic"
            android:src="@drawable/image_cover_pic"
            android:scaleType="fitXY"
           />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/profile_pic"
            android:src="@drawable/image_profile_pic"
            android:layout_marginTop="190dp"
            android:layout_gravity="center_horizontal"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/divider_color"
            app:civ_border_overlay="true"
            />
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/profile_edit"
            android:src="@drawable/icon_pencil"
            android:scaleType="centerCrop"
            android:layout_marginTop="260dp"
            android:layout_gravity="end"
            android:layout_marginEnd="25dp"
            android:background="@color/white"
            android:backgroundTint="@color/divider_color"
            />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:elevation="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/profile_fl1"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:paddingBottom="5dp"
            android:background="@color/white"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/profile_img_name"
                android:src="@drawable/icon_user"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="5dp"
                android:layout_alignBottom="@id/profile_name"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="25dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/profile_name"
                android:layout_toEndOf="@id/profile_img_name"
                android:text="@string/username"
                android:textColor="@color/light_black"
                android:textSize="20sp"
                android:gravity="start|center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:id="@+id/profile_view1"
                android:background="@color/divider_color"
                android:layout_below="@id/profile_name"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/profile_img_branch"
                android:src="@drawable/icon_branch"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="5dp"
                android:layout_alignBottom="@id/profile_branch"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="25dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/profile_branch"
                android:layout_toEndOf="@id/profile_img_branch"
                android:layout_below="@id/profile_view1"
                android:text="Branch"
                android:textColor="@color/light_black"
                android:textSize="20sp"
                android:gravity="start|center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:id="@+id/profile_view2"
                android:background="@color/divider_color"
                android:layout_below="@id/profile_branch"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/profile_img_year"
                android:src="@drawable/icon_year"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="5dp"
                android:layout_alignBottom="@id/profile_year"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="25dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/profile_year"
                android:layout_toEndOf="@id/profile_img_year"
                android:layout_below="@id/profile_view2"
                android:text="Year of study"
                android:textColor="@color/light_black"
                android:textSize="20sp"
                android:gravity="start|center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:id="@+id/profile_view3"
                android:background="@color/divider_color"
                android:layout_below="@id/profile_year"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/profile_img_mobile"
                android:src="@drawable/icon_mobile"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="5dp"
                android:layout_alignBottom="@id/profile_mobile"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="25dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/profile_mobile"
                android:layout_toEndOf="@id/profile_img_mobile"
                android:layout_below="@id/profile_view3"
                android:text="Mobile no."
                android:textColor="@color/light_black"
                android:textSize="20sp"
                android:gravity="start|center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:id="@+id/profile_view4"
                android:background="@color/divider_color"
                android:layout_below="@id/profile_mobile"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/profile_img_dob"
                android:src="@drawable/icon_dob"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="5dp"
                android:layout_alignBottom="@id/profile_dob"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="25dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/profile_dob"
                android:layout_toEndOf="@id/profile_img_dob"
                android:layout_below="@id/profile_view4"
                android:text="Date of birth"
                android:textColor="@color/light_black"
                android:textSize="20sp"
                android:gravity="start|center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:id="@+id/profile_view5"
                android:background="@color/divider_color"
                android:layout_below="@id/profile_dob"/>


            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/profile_img_gender"
                android:src="@drawable/icon_gender"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="5dp"
                android:layout_alignBottom="@id/profile_gender"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="25dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/profile_gender"
                android:layout_toEndOf="@id/profile_img_gender"
                android:layout_below="@id/profile_view5"
                android:text="Gender"
                android:textColor="@color/light_black"
                android:textSize="20sp"
                android:gravity="start|center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:id="@+id/profile_view6"
                android:background="@color/divider_color"
                android:layout_below="@id/profile_gender"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/profile_img_hostel"
                android:src="@drawable/icon_hostel_"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="5dp"
                android:layout_alignBottom="@id/profile_hostel"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="25dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/profile_hostel"
                android:layout_toEndOf="@id/profile_img_hostel"
                android:layout_below="@id/profile_view6"
                android:text="Hostel"
                android:textColor="@color/light_black"
                android:textSize="20sp"
                android:gravity="start|center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:id="@+id/profile_view7"
                android:background="@color/divider_color"
                android:layout_below="@id/profile_gender"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
